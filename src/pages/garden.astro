---
import BaseLayout from "../layouts/BaseLayout.astro";

// Update this URL with your actual digital garden link
const gardenUrl = "https://garden.pepo.dev/";
---

<BaseLayout
  title="Digital Garden"
  description="Explore my digital garden - a growing collection of interconnected thoughts, notes, and knowledge."
>
  <!-- Garden Hero -->
  <section class="garden-hero section">
    <div class="container">
      <div class="hero-content">
        <div class="garden-icon">ðŸŒ±</div>
        <h1 class="fade-in">Digital Garden</h1>
        <p class="lead fade-in">
          A growing collection of interconnected thoughts, notes, and knowledge.
        </p>
      </div>
    </div>
  </section>

  <!-- Garden Info -->
  <section
    class="garden-info section"
    style="background-color: var(--color-surface);"
  >
    <div class="container">
      <div class="info-grid">
        <div class="info-card card">
          <div class="info-icon">ðŸ“š</div>
          <h3>What is a Digital Garden?</h3>
          <p>
            A digital garden is a personal knowledge base that grows organically
            over time. Unlike a blog with polished, chronological posts, a
            garden contains evergreen notes that are continuously refined and
            interconnected.
          </p>
        </div>

        <div class="info-card card">
          <div class="info-icon">ðŸŒ¿</div>
          <h3>What You'll Find</h3>
          <ul class="garden-topics">
            <li>Technical notes and learnings</li>
            <li>Book summaries and highlights</li>
            <li>Thought experiments and ideas</li>
            <li>Interconnected concepts</li>
            <li>Work-in-progress thinking</li>
          </ul>
        </div>

        <div class="info-card card">
          <div class="info-icon">ðŸ’¡</div>
          <h3>Philosophy</h3>
          <p>
            My garden embraces the idea of "learning in public" - sharing
            knowledge in various stages of growth. Not everything is polished,
            and that's okay. It's a space for exploration and continuous
            learning.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Visit Garden CTA -->
  <section class="visit-garden section">
    <div class="container">
      <div class="visit-card card">
        <div class="visit-content">
          <h2>ðŸŒ³ Visit My Digital Garden</h2>
          <p>
            Explore my interconnected notes, ideas, and learnings. The garden is
            constantly evolving with new content and connections.
          </p>
          <div class="visit-buttons">
            <a
              href={gardenUrl}
              target="_blank"
              rel="noopener noreferrer"
              class="btn btn-large"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                style="margin-right: 0.5rem;"
              >
                <path
                  d="M18 13v6a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V8a2 2 0 0 1 2-2h6"
                ></path>
                <polyline points="15 3 21 3 21 9"></polyline>
                <line x1="10" y1="14" x2="21" y2="3"></line>
              </svg>
              Visit Digital Garden
            </a>
          </div>
          <p class="visit-note">Opens in a new tab</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Recent Topics -->
  <section
    class="topics-section section"
    style="background-color: var(--color-surface);"
  >
    <div class="container">
      <h2 class="section-title">ðŸŒ± Recent Growth Areas</h2>
      <div class="topics-grid">
        <div class="topic-card card">
          <h3>Web Performance</h3>
          <p>Notes on optimizing websites for speed and user experience</p>
        </div>
        <div class="topic-card card">
          <h3>System Design</h3>
          <p>Patterns and principles for building scalable systems</p>
        </div>
        <div class="topic-card card">
          <h3>Learning Resources</h3>
          <p>Curated collection of books, courses, and articles</p>
        </div>
        <div class="topic-card card">
          <h3>Creative Coding</h3>
          <p>Experiments with generative art and creative programming</p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* Garden Hero */
  .garden-hero {
    text-align: center;
    padding: var(--spacing-2xl) 0;
  }

  .hero-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .garden-icon {
    font-size: 5rem;
    margin-bottom: var(--spacing-md);
  }

  .garden-hero h1 {
    font-size: clamp(2.5rem, 5vw, 4rem);
    margin-bottom: var(--spacing-md);
  }

  .lead {
    font-size: 1.25rem;
    color: var(--color-text-light);
    max-width: 700px;
    margin: 0 auto;
  }

  /* Info Grid */
  .info-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
  }

  .info-card {
    text-align: center;
    padding: var(--spacing-xl);
  }

  .info-icon {
    font-size: 3rem;
    margin-bottom: var(--spacing-md);
  }

  .info-card h3 {
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .info-card p {
    color: var(--color-text-light);
    line-height: 1.6;
  }

  .garden-topics {
    list-style: none;
    padding: 0;
    margin: 0;
    text-align: left;
  }

  .garden-topics li {
    padding: var(--spacing-xs) 0;
    color: var(--color-text-light);
    position: relative;
    padding-left: var(--spacing-md);
  }

  .garden-topics li::before {
    content: "ðŸŒ¿";
    position: absolute;
    left: 0;
  }

  /* Visit Garden */
  .visit-card {
    max-width: 700px;
    margin: 0 auto;
    padding: var(--spacing-2xl);
    text-align: center;
    background: linear-gradient(135deg, #f0fdf410, #ecfccb10);
    border: 2px solid var(--color-border);
  }

  .visit-content h2 {
    font-size: clamp(2rem, 4vw, 2.5rem);
    margin-bottom: var(--spacing-md);
  }

  .visit-content > p {
    font-size: 1.125rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-xl);
    line-height: 1.6;
  }

  .visit-buttons {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-sm);
  }

  .btn-large {
    padding: var(--spacing-md) var(--spacing-xl);
    font-size: 1.125rem;
    display: inline-flex;
    align-items: center;
  }

  .visit-note {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Topics Grid */
  .topics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--spacing-lg);
  }

  .topic-card {
    padding: var(--spacing-lg);
    text-align: center;
  }

  .topic-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-primary);
  }

  .topic-card p {
    font-size: 0.9375rem;
    color: var(--color-text-light);
    margin: 0;
  }

  /* CTA Section */
  .cta-section {
    color: white;
  }

  .cta-content {
    text-align: center;
    max-width: 600px;
    margin: 0 auto;
  }

  .cta-content h2 {
    color: white;
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: var(--spacing-md);
  }

  .cta-content p {
    color: rgba(255, 255, 255, 0.9);
    font-size: 1.25rem;
    margin-bottom: var(--spacing-lg);
  }

  @media (max-width: 768px) {
    .info-grid {
      grid-template-columns: 1fr;
    }

    .visit-buttons {
      flex-direction: column;
    }

    .topics-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
