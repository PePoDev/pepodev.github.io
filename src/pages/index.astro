<style>
  .bento-section {
    padding: var(--spacing-xl) 0;
    min-height: calc(100vh - 70px);
  }

  /* Bento Grid Layout */
  .bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-md);
    grid-auto-rows: 180px;
  }

  /* Card Base Styles */
  .bento-card {
    padding: var(--spacing-lg);
    display: flex;
    flex-direction: column;
    position: relative;
    overflow: hidden;
    transition: all var(--transition-normal);
    cursor: default;
  }

  .bento-card::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    opacity: 0;
    transition: opacity var(--transition-normal);
    z-index: 0;
  }

  .bento-card:hover::before {
    opacity: 0.05;
  }

  .bento-card > * {
    position: relative;
    z-index: 1;
  }

  .bento-card:hover {
    transform: translateY(-4px);
  }

  /* Hero Card - Large */
  .hero-card {
    grid-column: span 2;
    grid-row: span 2;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    color: white;
    justify-content: center;
  }

  .hero-card::before {
    display: none;
  }

  .greeting {
    font-size: 1.125rem;
    opacity: 0.9;
    display: block;
    margin-bottom: var(--spacing-xs);
  }

  .hero-card h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    margin-bottom: var(--spacing-sm);
    color: white;
  }

  .hero-card .gradient-text {
    background: linear-gradient(135deg, #ffffff, #e0e7ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .role {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: var(--spacing-xs);
    color: rgba(255, 255, 255, 0.95);
  }

  .tagline {
    font-size: 1rem;
    margin-bottom: var(--spacing-lg);
    color: rgba(255, 255, 255, 0.85);
  }

  .hero-buttons {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  .hero-card .btn {
    background-color: white;
    color: var(--color-primary);
  }

  .hero-card .btn:hover {
    background-color: var(--color-surface);
    transform: translateY(-2px);
  }

  .hero-card .btn-outline {
    background-color: transparent;
    border: 2px solid white;
    color: white;
  }

  .hero-card .btn-outline:hover {
    background-color: rgba(255, 255, 255, 0.1);
  }

  /* About Card */
  .about-card {
    grid-column: span 2;
    grid-row: span 1;
  }

  /* Skills Card */
  .skills-card {
    grid-column: span 2;
    grid-row: span 1;
  }

  .tech-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-top: auto;
  }

  .tech-tag {
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: calc(var(--border-radius) / 2);
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--color-primary);
  }

  /* Experience Card */
  .experience-card {
    grid-column: span 2;
    grid-row: span 1;
    background: linear-gradient(135deg, #f59e0b10, #ec489910);
  }

  .stat-group {
    display: flex;
    gap: var(--spacing-xl);
    justify-content: center;
    align-items: center;
    height: 100%;
  }

  .stat {
    text-align: center;
  }

  .stat-number {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(
      135deg,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
    margin-bottom: var(--spacing-xs);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-light);
    font-weight: 500;
  }

  /* Projects Card */
  .projects-card {
    grid-column: span 2;
    grid-row: span 1;
  }

  /* Location Card */
  .location-card {
    grid-column: span 1;
    grid-row: span 1;
  }

  .location {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xs);
  }

  .availability {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Social Card */
  .social-card {
    grid-column: span 1;
    grid-row: span 1;
  }

  .social-links {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: auto;
  }

  .social-btn {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background-color: var(--color-background);
    border: 2px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all var(--transition-fast);
    color: var(--color-text);
  }

  .social-btn:hover {
    background-color: var(--color-primary);
    border-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  /* Quote Card */
  .quote-card {
    grid-column: span 2;
    grid-row: span 1;
    background: linear-gradient(135deg, #7c3aed10, #2563eb10);
    position: relative;
  }

  .quote-icon {
    font-size: 4rem;
    line-height: 1;
    color: var(--color-primary);
    opacity: 0.2;
    position: absolute;
    top: 10px;
    left: 15px;
  }

  .quote-text {
    font-size: 1rem;
    font-style: italic;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .quote-author {
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin: 0;
  }

  /* Status Card */
  .status-card {
    grid-column: span 2;
    grid-row: span 1;
  }

  .status-indicator {
    display: flex;
    align-items: center;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-sm);
  }

  .status-dot {
    width: 10px;
    height: 10px;
    background-color: #10b981;
    border-radius: 50%;
    animation: pulse 2s ease-in-out infinite;
  }

  @keyframes pulse {
    0%,
    100% {
      opacity: 1;
    }
    50% {
      opacity: 0.5;
    }
  }

  .status-text {
    font-weight: 600;
    color: var(--color-text);
  }

  /* Common Elements */
  .card-icon {
    font-size: 2rem;
    margin-bottom: var(--spacing-sm);
  }

  .bento-card h3 {
    font-size: 1.25rem;
    margin-bottom: var(--spacing-sm);
    color: var(--color-text);
  }

  .bento-card p {
    color: var(--color-text-light);
    margin-bottom: var(--spacing-sm);
  }

  .card-link {
    margin-top: auto;
    color: var(--color-primary);
    font-weight: 600;
    font-size: 0.9375rem;
    transition: color var(--transition-fast);
  }

  .card-link:hover {
    color: var(--color-secondary);
  }

  /* Responsive Design */
  @media (max-width: 1200px) {
    .bento-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .hero-card {
      grid-column: span 3;
    }

    .about-card,
    .skills-card,
    .projects-card,
    .quote-card,
    .status-card {
      grid-column: span 3;
    }

    .experience-card {
      grid-column: span 3;
    }
  }

  @media (max-width: 768px) {
    .bento-grid {
      grid-template-columns: 1fr;
      grid-auto-rows: auto;
      gap: var(--spacing-sm);
    }

    .bento-card,
    .hero-card,
    .about-card,
    .skills-card,
    .experience-card,
    .projects-card,
    .location-card,
    .social-card,
    .quote-card,
    .status-card {
      grid-column: span 1;
      grid-row: span 1;
      min-height: 180px;
    }

    .hero-card {
      min-height: 300px;
    }

    .hero-buttons {
      flex-direction: column;
    }

    .hero-buttons .btn {
      width: 100%;
      text-align: center;
    }
  }
</style>
