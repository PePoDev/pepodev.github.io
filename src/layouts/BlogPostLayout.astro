---
import BaseLayout from "./BaseLayout.astro";
import { type CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { title, description, pubDate, updatedDate, author, image, tags } =
  post.data;

const formattedPubDate = new Date(pubDate).toLocaleDateString("en-US", {
  year: "numeric",
  month: "long",
  day: "numeric",
});

const formattedUpdatedDate = updatedDate
  ? new Date(updatedDate).toLocaleDateString("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    })
  : null;
---

<BaseLayout title={title} description={description} image={image?.url}>
  <article class="blog-post">
    <div class="container">
      <!-- Post Header -->
      <header class="post-header">
        <div class="post-meta">
          <time datetime={pubDate.toISOString()} class="post-date">
            {formattedPubDate}
          </time>
          {
            formattedUpdatedDate && (
              <span class="post-updated">Updated: {formattedUpdatedDate}</span>
            )
          }
        </div>

        <h1 class="post-title">{title}</h1>

        <p class="post-description">{description}</p>

        <div class="post-author">
          <span>By {author}</span>
        </div>

        {
          tags.length > 0 && (
            <div class="post-tags">
              {tags.map((tag) => (
                <a href={`/blog/tag/${tag}`} class="tag">
                  {tag}
                </a>
              ))}
            </div>
          )
        }
      </header>

      <!-- Featured Image -->
      {
        image && (
          <div class="post-image">
            <img src={image.url} alt={image.alt} loading="eager" />
          </div>
        )
      }

      <!-- Post Content -->
      <div class="post-content prose">
        <slot />
      </div>

      <!-- Post Footer -->
      <footer class="post-footer">
        <div class="post-navigation">
          <a href="/blog" class="back-to-blog"> ‚Üê Back to Blog </a>
        </div>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-post {
    padding: var(--spacing-xl) 0;
  }

  /* Post Header */
  .post-header {
    max-width: 800px;
    margin: 0 auto var(--spacing-xl);
    text-align: center;
  }

  .post-meta {
    display: flex;
    justify-content: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
    flex-wrap: wrap;
  }

  .post-date {
    color: var(--color-text-light);
    font-size: 0.9375rem;
  }

  .post-updated {
    color: var(--color-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }

  .post-title {
    font-size: clamp(2rem, 5vw, 3rem);
    margin-bottom: var(--spacing-md);
    line-height: 1.2;
  }

  .post-description {
    font-size: 1.25rem;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-md);
  }

  .post-author {
    color: var(--color-text-light);
    font-size: 0.9375rem;
    margin-bottom: var(--spacing-md);
  }

  .post-tags {
    display: flex;
    justify-content: center;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
  }

  .tag {
    display: inline-block;
    padding: var(--spacing-xs) var(--spacing-sm);
    background-color: var(--color-surface);
    color: var(--color-primary);
    border-radius: calc(var(--border-radius) / 2);
    font-size: 0.875rem;
    font-weight: 500;
    border: 1px solid var(--color-border);
    transition: all var(--transition-fast);
  }

  .tag:hover {
    background-color: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }

  /* Post Image */
  .post-image {
    max-width: 1000px;
    margin: 0 auto var(--spacing-xl);
    border-radius: var(--border-radius);
    overflow: hidden;
    box-shadow: var(--shadow-lg);
  }

  .post-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Post Content - Prose Styling */
  .post-content {
    max-width: 800px;
    margin: 0 auto;
  }

  .prose {
    color: var(--color-text);
    line-height: 1.8;
  }

  .prose h1,
  .prose h2,
  .prose h3,
  .prose h4,
  .prose h5,
  .prose h6 {
    margin-top: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .prose h2 {
    font-size: 2rem;
    padding-bottom: var(--spacing-sm);
    border-bottom: 2px solid var(--color-border);
  }

  .prose h3 {
    font-size: 1.5rem;
  }

  .prose p {
    margin-bottom: var(--spacing-md);
    color: var(--color-text);
  }

  .prose a {
    color: var(--color-primary);
    text-decoration: underline;
    text-decoration-thickness: 2px;
    text-underline-offset: 2px;
  }

  .prose a:hover {
    color: var(--color-secondary);
  }

  .prose ul,
  .prose ol {
    margin-bottom: var(--spacing-md);
    padding-left: var(--spacing-lg);
  }

  .prose li {
    margin-bottom: var(--spacing-xs);
    color: var(--color-text);
  }

  .prose code {
    background-color: var(--color-surface);
    color: var(--color-primary);
    padding: 0.2em 0.4em;
    border-radius: calc(var(--border-radius) / 2);
    font-family: var(--font-mono);
    font-size: 0.9em;
  }

  .prose pre {
    background-color: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    padding: var(--spacing-md);
    overflow-x: auto;
    margin-bottom: var(--spacing-md);
  }

  .prose pre code {
    background-color: transparent;
    padding: 0;
    color: var(--color-text);
  }

  .prose blockquote {
    border-left: 4px solid var(--color-primary);
    padding-left: var(--spacing-md);
    margin: var(--spacing-md) 0;
    font-style: italic;
    color: var(--color-text-light);
  }

  .prose img {
    max-width: 100%;
    height: auto;
    border-radius: var(--border-radius);
    margin: var(--spacing-md) 0;
  }

  /* Post Footer */
  .post-footer {
    max-width: 800px;
    margin: var(--spacing-2xl) auto 0;
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-border);
  }

  .post-navigation {
    display: flex;
    justify-content: center;
  }

  .back-to-blog {
    color: var(--color-primary);
    font-weight: 600;
    padding: var(--spacing-sm) var(--spacing-lg);
    border: 2px solid var(--color-primary);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
  }

  .back-to-blog:hover {
    background-color: var(--color-primary);
    color: white;
    transform: translateY(-2px);
  }

  @media (max-width: 768px) {
    .post-title {
      font-size: 2rem;
    }

    .post-description {
      font-size: 1.125rem;
    }
  }
</style>
